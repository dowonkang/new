{
  "name": "new",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "npm run dev",
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write --ignore-unknown .",
    "validate:html": "html-validate \"**/*.html\"",
    "lint:script": "eslint --fix **/*.{js,cjs,mjs}",
    "lint:style": "stylelint --fix **/*.css"
  },
  "devDependencies": {
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-validate": "^7.12.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss-preset-env": "^7.8.3",
    "prettier": "2.8.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "vite": "^4.0.3"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.html": "html-validate",
    "*.{js,cjs,mjs}": "eslint --cache --fix",
    "*.css": "stylelint --fix"
  }
}
