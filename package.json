{
  "name": "new",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "npm run dev",
    "dev": "web-dev-server --node-resolve --watch",
    "format": "prettier --write --ignore-unknown .",
    "validate:html": "html-validate \"**/*.html\"",
    "lint:script": "eslint --fix **/*.{js,cjs,mjs}",
    "lint:style": "stylelint --fix **/*.css"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.34",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-validate": "^7.4.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^9.0.0"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.html": "html-validate",
    "*.{js,cjs,mjs}": "eslint --cache --fix",
    "*.css": "stylelint --fix"
  }
}
